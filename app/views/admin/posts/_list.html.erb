<% records.each do |p| %>
    <div class="list-item pointer">
      <%= link_to edit_admin_post_path(p), :remote => true, :class => "p-l-md p-t-md p-b-md block" do %>
          <div class="row">
            <div class="col-xs-2">
              <i class="fa fa-newspaper-o m-r-sm text-muted"></i>
            </div>
            <div class="col-xs-10">
              <small class="block"> <%= p.title %> </small>
            </div>
          </div>
      <% end %>
    </div>
<% end %>