<div class="col-xs-4 col-xs-offset-4">
  <div class="animate form login_form">
    <section class="login_content">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h1>Login</h1>
        <div>
          <%= f.input_field :email, required: false, autofocus: true, class: "form-control", placeholder: "Email" %>
        </div>
        <div>
          <%= f.input_field :password, required: false, class: "form-control", placeholder: "Password" %>
        </div>
        <div>
          <%= f.button :submit, "Sign in", class: "form-control btn primary m-0" %>
        </div>

        <div class="clearfix"></div>

        <div class="separator">
          <p class="change_link">New to site?
            <%= link_to "Create new account", new_registration_path(resource_name) %><br />
          </p>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end -%>
        </div>
      <% end %>
    </section>
  </div>

</div>
