<div class="col-xs-4 col-xs-offset-4">
  <div class="animate form login_form">
    <section class="login_content">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
          <h1>Forgot your password?</h1>
          <div>
            <%= f.input_field :email, required: false, autofocus: true, class: "form-control", placeholder: "Email" %>
          </div>
          <div>
            <%= f.input_field :password, required: false, class: "form-control", placeholder: "Password" %>
          </div>
          <div>
            <%= f.button :submit, "Send me reset password instructions", class: "form-control btn primary m-0" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator">
            <%- if controller_name != 'sessions' %>
                <%= link_to "Log in", new_session_path(resource_name) %><br />
            <% end -%>
          </div>
      <% end %>
    </section>
  </div>

</div>
